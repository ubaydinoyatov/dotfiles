[user]
  name = Ubayd
  email = ubayd.rahmonzoda@gmail.com

[core]
  editor = "nvim"
  safecrlf = false
  # Non-Windows:
  autocrlf = false
  excludesfile = /Users/ubayd/.gitignore

[pull]
  rebase = TRUE

[merge]
  log = true
  tool = nvimdiff4
  summary = true

[diff]
  tool = nvimdiff2
  renames = copies
  algorithm = patience

[alias]
  up = pull --rebase
  co = checkout
  ci = commit
  st = status
  br = branch
  lg = log --pretty=format:\"%C(cyan)%h %C(green)%ad%Creset | %s %C(yellow)%d %C(magenta)[%an]\" --graph --date=short
  type = cat-file -t
  dump = cat-file -p
  unstage = rm --cached -r

[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  showbranch = auto
  status = auto
  ui = on

[help]
  autocorrect = 3

[github]
  user = rahmonzoda

[difftool]
  trustExitCode = true

[mergetool "nvimdiff4"]
  trustExitCode = true

[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool "nfugitive"]
  cmd = nvim -f -c "Gdiff" "$MERGED"

[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE
